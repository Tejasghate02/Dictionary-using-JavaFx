<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dictionary1.GamePageController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
    <Text fill="Black" layoutX="200" layoutY="50" text="Dictionary">
        <font>
            <Font size="25.0"/>
        </font>
    </Text>

    <Text layoutX="200" layoutY="100" text="Search for a word">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>

    <TextField fx:id="searchword" layoutY="100" layoutX="200"  minWidth="100" minHeight="20" promptText="Enter a word"></TextField>

    <ImageView fitHeight="20" fitWidth="100"  layoutY="100" layoutX="350" onMouseClicked="#search">
        <image>
            <Image url="@search.png"/>
        </image>
    </ImageView>

    <Text layoutX="200.0" layoutY="150.0" text="Enter a new word">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>

    <TextField fx:id="word" layoutY="200" layoutX="200" minHeight="20" minWidth="100" promptText="Enter a word"></TextField>
    <TextField fx:id="meaning" layoutY="250" layoutX="200" minHeight="20" minWidth="100" promptText="Enter the meaning"></TextField>
    <ImageView fitHeight="20" fitWidth="100" layoutX="350" layoutY="250" onMouseClicked="#newword">
        <image>
            <Image url="@add.png"/>
        </image>
    </ImageView>
    </children>

</AnchorPane>
